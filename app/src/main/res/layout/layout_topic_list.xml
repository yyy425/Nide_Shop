<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:id="@+id/topic_img"/>

    <TextView
        android:id="@+id/topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@id/topic_img"
        app:layout_constraintTop_toBottomOf="@id/topic_img" />

    <TextView
        android:id="@+id/topic_price_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:textColor="#FF0000"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@id/topic_title"
        app:layout_constraintLeft_toRightOf="@id/topic_title"
        app:layout_constraintTop_toTopOf="@id/topic_title" />

    <TextView
        android:id="@+id/topic_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="@id/topic_title"
        app:layout_constraintTop_toBottomOf="@id/topic_title" />
</androidx.constraintlayout.widget.ConstraintLayout>